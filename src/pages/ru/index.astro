---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../utils/i18n';

const lang = 'ru';
const t = useTranslations(lang);
const title = 'Иван Князев - Разработчик';
---

<Layout title={title} lang={lang}>
  <section class="hero">
    <h1>{t('home.title')}</h1>
    <p class="subtitle">{t('home.subtitle')}</p>
    <p class="description">
      {t('home.description')}
    </p>
    <div class="cta-buttons">
      <a href="/ru/projects" class="btn primary">{t('home.viewProjects')}</a>
      <a href="mailto:contact@ivankniazev.dev" class="btn secondary">{t('home.contactMe')}</a>
    </div>
  </section>

  <section class="skills">
    <h2>{t('home.skillsTitle')}</h2>
    <div class="skills-grid">
      <div class="skill-item">JavaScript</div>
      <div class="skill-item">TypeScript</div>
      <div class="skill-item">React</div>
      <div class="skill-item">Node.js</div>
      <div class="skill-item">HTML/CSS</div>
      <div class="skill-item">Browser Extensions</div>
      <div class="skill-item">Git</div>
      <div class="skill-item">Web APIs</div>
    </div>
  </section>
</Layout>
